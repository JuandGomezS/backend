<h2>LISTA DE PRODUCTOS</h2>
{{#if listExists}}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Producto</th>
                <th scope="col">Precio</th>
                <th scope="col">Imagen</th>
            </tr>
        </thead>
        <tbody>    
        {{#each products}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.thumbnail}}</td>
                </tr>
        {{/each}}
        </tbody>
    </table>
    {{else}}
        <h1>NO HAY PRODUCTOS</h1>
{{/if}}